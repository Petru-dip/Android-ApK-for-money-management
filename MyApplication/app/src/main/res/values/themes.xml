<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.FinanceApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Culori principale -->
        <item name="colorPrimary">@color/brand_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/brand_surface</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Fundal general -->
        <item name="android:colorBackground">@color/brand_surface</item>
        <item name="colorOnBackground">@color/brand_on_surface</item>

        <!-- Edge-to-edge window settings -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowContentTransitions">true</item>

        <!-- Activare suport dark -->
        <item name="android:forceDarkAllowed">true</item>

        <!-- Stil implicit pentru butoane -->
        <item name="materialButtonStyle">@style/Widget.FinanceApp.Button</item>
    </style>

    <style name="Widget.FinanceApp.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">16dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Text appearances for lists -->
    <style name="TextAppearance.FinanceApp.Title" parent="TextAppearance.Material3.TitleMedium"/>
    <style name="TextAppearance.FinanceApp.Body" parent="TextAppearance.Material3.BodyMedium"/>

</resources>
